<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navMenuContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_rounded">

    <Button
        android:id="@+id/navMenuQuestButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/signboard"
        android:fontFamily="@font/silkscreen"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="1"
        android:textColor="#FFE5B4"
        android:text="Quest Board"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/navMenuAdventurerButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/signboard"
        android:fontFamily="@font/silkscreen"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="1"
        android:textColor="#FFE5B4"
        android:text="Adventurers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navMenuQuestButton" />

    <Button
        android:id="@+id/navMenuShopButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/signboard"
        android:fontFamily="@font/silkscreen"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="1"
        android:textColor="#FFE5B4"
        android:text="Cosmetic Shop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navMenuAdventurerButton" />

    <Button
        android:id="@+id/navMenuBossButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/signboard"
        android:fontFamily="@font/silkscreen"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="1"
        android:textColor="#FFE5B4"
        android:text="Weekly Boss"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navMenuShopButton" />

    <Button
        android:id="@+id/navMenuLeaderboardButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/signboard"
        android:fontFamily="@font/silkscreen"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="1"
        android:textColor="#FFE5B4"
        android:text="Leaderboards"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navMenuBossButton" />

    <Button
        android:id="@+id/navMenuQuestHistoryButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/signboard"
        android:fontFamily="@font/silkscreen"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="1"
        android:textColor="#FFE5B4"
        android:text="Quest History"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navMenuLeaderboardButton" />

    <Button
        android:id="@+id/navMenuLogoutButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/signboard"
        android:fontFamily="@font/silkscreen"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="1"
        android:textColor="#FFE5B4"
        android:text="Log Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navMenuQuestHistoryButton" />
</androidx.constraintlayout.widget.ConstraintLayout>
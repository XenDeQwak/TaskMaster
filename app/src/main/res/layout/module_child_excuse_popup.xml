<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/excuseQuestForm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_rounded">

    <ImageView
        android:id="@+id/editExcuseImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="1dp"
        android:layout_marginTop="16dp"
        android:translationZ="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/editExcuseTitle"
        app:srcCompat="@drawable/rectangle_rounded"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintVertical_bias="0.5"
        />

    <EditText
        android:id="@+id/editExcuseTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/textbox_rounded"
        android:layout_marginTop="16dp"
        android:elevation="1dp"
        android:ems="10"
        android:fontFamily="@font/eb_garamond_semibold"
        android:hint="Title"
        android:inputType="textCapWords"
        android:padding="8dp"
        android:textAlignment="center"
        android:textColor="#3F3F3F"
        android:textSize="20sp"
        android:translationZ="1dp"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="0.925"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editExcuseImage"
        app:layout_constraintBottom_toTopOf="@+id/editExcuseDescription"
        />

    <EditText
        android:id="@+id/editExcuseDescription"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/textbox_rounded"
        android:elevation="1dp"
        android:ems="10"
        android:fontFamily="@font/eb_garamond_semibold"
        android:hint="Reason"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="#3F3F3F"
        android:textSize="20sp"
        android:translationZ="1dp"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="0.925"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editExcuseTitle"
        app:layout_constraintBottom_toTopOf="@+id/editExcuseButtonContainer"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/editExcuseButtonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editExcuseDescription"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editExcuseAccept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shadowed_states"
            android:elevation="1dp"
            android:fontFamily="@font/eb_garamond_semibold"
            android:stateListAnimator="@null"
            android:text="Submit"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#3F3F3F"
            android:textSize="20sp"
            android:translationZ="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/editExcuseCancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintHorizontal_bias="0"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editExcuseCancel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button_shadowed_states"
            android:elevation="1dp"
            android:fontFamily="@font/eb_garamond_semibold"
            android:stateListAnimator="@null"
            android:text="Back"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#3F3F3F"
            android:textSize="20sp"
            android:translationZ="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintHorizontal_bias="1"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
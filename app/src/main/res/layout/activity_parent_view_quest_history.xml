<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".view.parent.ParentViewQuestHistory">

    <ImageView
        android:id="@+id/pvqh_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.95"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_percent="0.925"
        app:srcCompat="@drawable/rectangle_rounded" />

    <ScrollView
        android:id="@+id/pvqh_scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rectangle_rounded"
        app:layout_constraintBottom_toBottomOf="@+id/pvqh_container"
        app:layout_constraintEnd_toEndOf="@+id/pvqh_container"
        app:layout_constraintStart_toStartOf="@+id/pvqh_container"
        app:layout_constraintTop_toTopOf="@+id/pvqh_container">

        <LinearLayout
            android:id="@+id/pvqh_scrollContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <com.taskmaster.appui.view.uimodule.TopBar
        android:id="@+id/glb_topbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/pvqh_container"
        app:layout_constraintStart_toStartOf="@+id/pvqh_container"
        app:layout_constraintTop_toTopOf="@+id/pvqh_container" />

</androidx.constraintlayout.widget.ConstraintLayout>